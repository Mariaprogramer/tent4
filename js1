// Abrir e fechar o modal
function closeModal() {
    document.getElementById('loginModal').style.display = 'none';
}

function openModal() {
    document.getElementById('loginModal').style.display = 'block';
}

// Simular botÃ£o de curso (substituir depois por redirecionamento real)
function acessarCurso(curso) {
    alert(`VocÃª acessou o curso de ${curso.toUpperCase()}! Em breve serÃ¡ redirecionado.`);
}

// Chat simulando pergunta
function enviarPergunta() {
    const pergunta = document.getElementById("pergunta").value;
    const respostaDiv = document.getElementById("resposta");
    if (pergunta.trim() === '') return;

    respostaDiv.innerHTML = `<p><strong>VocÃª:</strong> ${pergunta}</p>` +
        `<p><strong>ChatGPT:</strong> Estou aqui para te ajudar! ðŸ˜Š Essa funÃ§Ã£o serÃ¡ ativada em breve!</p>`;

    document.getElementById("pergunta").value = '';
}

// Login com Firebase
window.onload = () => {
    const form = document.getElementById("loginForm");
    form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const email = form.email.value;
        const password = form.password.value;

        try {
            await firebase.auth().signInWithEmailAndPassword(email, password);
            alert("Login bem-sucedido!");
            closeModal();
        } catch (error) {
            alert("Erro ao fazer login: " + error.message);
        }
    });
};
